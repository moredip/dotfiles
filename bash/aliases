
# Utility
alias reload='source ~/dotfiles/bash/aliases'
alias ea='$EDITOR ~/dotfiles/bash/aliases && reload' # Edit aliases

# Git
alias g="git status"
alias ga="git add"
alias gd="git diff"
alias gdc="git diff --cached"
alias gc="git commit"
alias gs="git stash"
alias gsp="git stash pop"

# General
alias e='exit'
alias c='clear'
alias hg='history | grep $1'
alias duh='du -h --max-depth 2 $1'
alias ge='gedit'

# Ruby/Rails
alias ss='./script/server'
alias sc='./script/console'
alias s2='spec _1.1.3_ -c -p "controllers/**/*_spec.rb,lib/**/*_spec.rb,views/**/*_spec.rb,models/**/*_spec.rb,helpers/**/*_spec.rb" spec'
alias acceptance='spec -c  -p "acceptance/**/*_acceptance.rb" spec'
alias rs='rake spec'
alias r='rake'

alias cd_bh_trunk='cd ~/svn/campaign_apps/trunk/bidhero/ui/'
alias cd_bh_trunkg='cd ~/git/bidhero/ui/'
alias cd_bh_task='cd ~/svn/campaign_apps/task_branch/bidhero/ui/'
alias cd_bh_release='cd ~/svn/campaign_apps/rel_branch/bidhero/ui'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

